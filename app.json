{
  "expo": {
    "name": "Vovô da Sorte",
    "slug": "vovodasorte",
    "version": "1.0.5",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "vovodasorte",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/mascote-vovo.png",
      "resizeMode": "contain",
      "backgroundColor": "#181c24"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vovodasorte.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Usamos a câmera para ler o código QR dos bilhetes de loteria e conferir seus números.",
        "NSUserTrackingUsageDescription": "Usamos dados de rastreamento para exibir anúncios personalizados e melhorar sua experiência.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.vovodasorte.app",
      "versionCode": 9,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      [
        "expo-camera",
        {
          "cameraPermission": "Usamos a câmera para ler o código QR dos bilhetes de loteria e conferir seus números."
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-1873423099734846~7668016615",
          "iosAppId": "ca-app-pub-1873423099734846~7668016615"
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a3ad9c84-15d2-43a4-9936-69fc2d674350"
      }
    }
  }
}
