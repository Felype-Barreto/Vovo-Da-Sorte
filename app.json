{
  "expo": {
    "name": "Vovô da Sorte",
    "slug": "trevo-inteligente",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "vovodasorte",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/mascote-vovo.png",
      "resizeMode": "contain",
      "backgroundColor": "#181c24"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.vovodasorte.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Usamos a câmera para ler o código QR dos bilhetes de loteria e conferir seus números.",
        "NSUserTrackingUsageDescription": "Usamos dados de rastreamento para exibir anúncios personalizados e melhorar sua experiência.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-1873423099734846~7668016615"
      }
    },
    "android": {
      "package": "com.vovodasorte.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "VIBRATE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "googleServicesFile": "./google-services.json",
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-1873423099734846~7668016615"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Usamos a câmera para ler o código QR dos bilhetes de loteria e conferir seus números."
        }
      ],
      "expo-sqlite",
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "cf1f7bc7-d060-48f4-a1e1-c871bb524159"
      }
    }
  }
}
